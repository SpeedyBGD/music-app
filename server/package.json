{
    "name": "music-app-server",
    "version": "1.0.0",
    "description": "Backend for the Music App",
    "main": "dist/server.js",
    "scripts": {
      "start": "node dist/server.js",
      "build": "tsc",
      "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
      "lint": "eslint . --ext .ts,.tsx --fix",
      "format": "prettier --write \"src/**/*.ts\"",
      "setup-db": "bash scripts/setup-db.sh"
    },
    "dependencies": {
      "express": "^4.18.2",
      "cors": "^2.8.5",
      "dotenv": "^16.3.1",
      "sqlite3": "^5.1.6",
      "bcryptjs": "^2.4.3",
      "jsonwebtoken": "^9.0.2",
      "typescript": "^5.3.3",
      "ts-node": "^10.9.1",
      "ts-node-dev": "^2.0.0",
      "axios": "^1.6.2",
      "helmet": "^7.1.0",
      "morgan": "^1.10.0",
      "winston": "^3.11.0"
    },
    "devDependencies": {
      "@types/express": "^4.17.20",
      "@types/node": "^20.10.0",
      "@types/bcryptjs": "^2.4.2",
      "@types/jsonwebtoken": "^9.0.5",
      "@types/cors": "^2.8.17",
      "eslint": "^8.56.0",
      "eslint-config-prettier": "^9.1.0",
      "eslint-plugin-prettier": "^5.1.3",
      "eslint-plugin-import": "^2.29.0",
      "eslint-plugin-node": "^11.1.0",
      "eslint-plugin-promise": "^6.1.1",
      "prettier": "^3.1.1",
      "tslint": "^6.1.3"
    },
    "engines": {
      "node": ">=18.0.0"
    },
    "type": "module"
  }